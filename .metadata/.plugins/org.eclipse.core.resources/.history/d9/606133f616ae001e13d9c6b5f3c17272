CREATE DATABASE IF NOT EXISTS gestionPedidosCRUD;

DROP TABLE IF EXISTS cliente;

CREATE TABLE cliente (
  id serial PRIMARY KEY,
  nombre varchar(35),
  apellido varchar(35),
  email varchar(45)
);

