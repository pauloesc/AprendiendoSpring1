package relacionEntreTablasUnoAmuchos;

import javax.persistence.*;
import java.util.Date;

@Entity
@Table(name = "pedido")
public class Pedido {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(name = "fecha")
    private Date fecha;

    @Column(name = "forma_pago")
    private String formaPago;

    @ManyToOne(cascade = {CascadeType.PERSIST, CascadeType.MERGE, CascadeType.DETACH, CascadeType.REFRESH}) //muchos pedidos a un cliente
    
    //la tabla cliente se relaciona con l atabla de pedido a travez de la columna llamada "cliente_id"
    @JoinColumn(name = "cliente_id")
    private Cliente cliente;

    

}
